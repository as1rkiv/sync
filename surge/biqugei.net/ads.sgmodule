[MITM]
hostname = %APPEND% *.biqugei.net // 预备

[Script]
biqugei.net = type=http-response,pattern=^https?://+(www.)?biqugei.net,requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/as1rkiv/sync/main/surge/biqugei.net/ads.js

